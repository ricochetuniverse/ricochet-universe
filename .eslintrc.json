{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "parser": "babel-eslint",
    "rules": {
        // Possible Errors
        "no-console": ["off"],

        "react/no-typos": ["error"],
        "react/prop-types": ["off"],
        "react/jsx-no-target-blank": ["off"]
    },
    "plugins": ["react", "jsx-a11y"],
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "pragma": "h",

            // Not all React 16 features are available on Preact yet,
            // disable ESLint rules when appropriate
            // https://github.com/developit/preact/issues/1047
            "version": "16.5"
        }
    }
}
